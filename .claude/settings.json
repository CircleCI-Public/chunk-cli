{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check.sh",
            "statusMessage": "Running linter, typecheck, and unit tests..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check.sh",
            "statusMessage": "Running pre-commit checks..."
          }
        ]
      },
      {
        "matcher": "Edit|Write(*)",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/format.sh",
            "statusMessage": "Running formatter..."
          }
        ]
      }
    ]
  }
}
